[libdefaults]
        default_realm = {{ realm }}
        dns_lookup_realm = false
        dns_lookup_kdc = true

[realms]
{{ realm }} = {
  kdc = {{ ansible_hostname }}.{{ realm | lower }}
  admin_server = {{ ansible_hostname }}.{{ realm | lower }}
}

[domain_realm]
  .{{ realm | lower }} = {{ realm }}
  {{ realm | lower }} = {{ realm }}
